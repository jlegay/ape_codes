<div class="container">

  <h1 class="text-center">Nomenclature d'activités française</h1>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">N° APE</th>
          <th scope="col">Activité concernée</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @codes.each do |code| %>
          <tr>
            <td><%= code.code_digits %></td>
            <td><%= code.name %></td>

            <td><a href="#" data-toggle="modal" data-target="#modal-<%= code.id %>" class="btn btn-primary">Voir plus</a></td>
          </tr>
          <div class="modal fade" id="modal-<%= code.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">
                    <small> <%= code.code_digits %> </small>
                    <%= code.name %>
                  </h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <h5>Cette classe comprend: </h5>
                  <small> <%= simple_format(code.included) %> </small>
                  <h5>Cette classe ne comprend pas: </h5>
                  <small> <%= code.not_included %> </small>
                </div>
<!--                 <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Save changes</button>
                </div> -->
              </div>
            </div>
          </div>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

